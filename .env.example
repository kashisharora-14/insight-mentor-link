
# ==============================================
# FRONTEND CONFIGURATION (Vite)
# ==============================================
VITE_API_URL=http://localhost:5000/api

# ==============================================
# BACKEND CONFIGURATION (Node.js/Express)
# ==============================================

# Server Port (default: 3001)
API_PORT=3001

# Environment Mode
NODE_ENV=development

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL connection string (automatically set by Replit)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://username:password@localhost:5432/your_database

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================

# JWT Secret Key for token signing
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-change-in-production

# Alternative JWT Secret (if using different key)
JWT_SECRET_KEY=your-jwt-secret-key-here

# Session Secret Key
SECRET_KEY=your-secret-key-change-in-production

# ==============================================
# EMAIL CONFIGURATION (Required for authentication)
# ==============================================

# SMTP Server Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True

# Email Credentials
# For Gmail: Create an app password at https://myaccount.google.com/apppasswords
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-16-character-app-password

# Default Sender Email (optional, defaults to MAIL_USERNAME)
MAIL_DEFAULT_SENDER=your-email@gmail.com
MAIL_FROM=your-email@gmail.com

# Alternative Gmail Configuration (backward compatibility)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-16-character-app-password

# ==============================================
# CORS CONFIGURATION
# ==============================================
# Allowed CORS origins (default: * for all origins)
CORS_ORIGINS=*

# ==============================================
# OPTIONAL CONFIGURATIONS
# ==============================================

# Flask Environment (if using Python backend)
FLASK_ENV=development

# Replit Deployment Flag (automatically set by Replit)
REPLIT_DEPLOYMENT=0

# ==============================================
# SETUP INSTRUCTIONS
# ==============================================
# 1. Copy this file to create your own .env file:
#    cp .env.example .env
#
# 2. OR Add secrets in Replit Secrets tool (Tools ‚Üí Secrets üîí)
#
# 3. Required secrets (must be set):
#    - DATABASE_URL (auto-set by Replit PostgreSQL)
#    - JWT_SECRET or JWT_SECRET_KEY
#    - SECRET_KEY
#    - MAIL_USERNAME
#    - MAIL_PASSWORD
#
# 4. Generate secure secret keys:
#    node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
#
# 5. For Gmail: Use app-specific password, not your regular password
#    Create at: https://myaccount.google.com/apppasswords
#
# 6. Restart your application after adding/updating secrets

# ==============================================
# SECURITY NOTES
# ==============================================
