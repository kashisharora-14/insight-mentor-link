modules = ["nodejs-20", "python-3.11", "web", "postgresql-16"]
[agent]
expertMode = true
integrations = ["javascript_database:1.0.0", "resend:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "libiconv", "rustc", "zip"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind=0.0.0.0:5000", "--workers=4", "--timeout=120", "run:app"]
build = ["npm", "run", "build"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx concurrently \"npm run dev\" \"npm run dev:api\""
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3001
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 39753
externalPort = 3001
